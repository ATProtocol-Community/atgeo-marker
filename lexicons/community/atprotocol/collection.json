{
  "lexicon": 1,
  "id": "community.atprotocol.geomarker.collection",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["locations"],
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1,
            "maxLength": 800,
            "maxGraphemes": 400
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 600,
            "maxGraphemes": 1200
          },
          "mainEntry": {
            "type": "string",
            "format": "at-uri",
            "description": "The main entry associated with this geographic marker."
          },
          "locations": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "community.atprotocol.geomarker.marker#main"
            },
            "description": "An array of marker objects associated with this location collection"
          }
        }
      }
    }
  }
}
